<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp64</item>
        <item name="android:paddingEnd">@dimen/dp4</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="contentInsetStartWithNavigation">@dimen/dp0</item>
        <item name="titleMarginStart">@dimen/dp0</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="HintText">
        <item name="android:textColor">@color/gray_white</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="SearchEditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/rectangle_with_corners</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:drawablePadding">@dimen/dp16</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_white</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>