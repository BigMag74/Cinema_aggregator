<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SearchEditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/rectangle_with_corners</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_white</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>